
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <body>
        <div style="margin-top: 7%;" class="container mb-4">
            <div class="row mx-auto">
                <div class="col-5 my-auto text-center">
                    <img style="width: 350px; height: 150px;" src="~/Images/logo_delivery.png" alt="">
                    <h5 style="font-family: Roboto; font-style:italic; font-weight: 600;" class="mt-4">Nothing can slow us down.</h5>
                </div>
                <div class="col-5 col-sm-9 col-md-7 col-lg-5 mx-auto">
                    <div class="card border-0 shadow rounded-4 ">
                        <div class="card-body p-4 p-sm-5">
                            <form>
                                @Html.ValidationSummary(true, null, new { @class = "text-danger" })
                                <div class="mb-3">
                                    <label for="" class="form-label">Username</label>
                                    <input type="text" name="username" value="" placeholder="Tên đăng nhập" class = "form-control mw-100" maxlength = "50"/>
                                </div>
                                <div class="mb-3">
                                    <label for="" class="form-label ">Password</label>
                                    <input type="password" name="password" value="" placeholder="Mật khẩu" class="form-control mw-100" />
                                </div>
                                <button style="background: linear-gradient(90deg, #54BF5A 0%, #228542 100%); border: none; border-radius: 25px; font-size: 1.2rem;"
                                        type="submit" class="btn btn-primary p-2 w-100 mt-4">
                                    Login
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
}


